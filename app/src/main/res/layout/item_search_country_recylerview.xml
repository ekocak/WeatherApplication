<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="country"
            type="com.ekremkocak.weatherapplication.data.network.response.search.Result" />
        <variable
            name="clickListener"
            type="com.ekremkocak.weatherapplication.adapter.listeners.CountryItemClickListener" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >

        <TextView
            android:id="@+id/tv_country"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="@{() -> clickListener.onClick(country)}"
            android:text="@{String.valueOf(country.country.get(0).value)}"
            android:focusable="true" />

        <View
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_stroke_view_green"
            android:visibility="@{country.enable ? View.VISIBLE : View.GONE}"
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <View
            app:layout_constraintTop_toBottomOf="@id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
